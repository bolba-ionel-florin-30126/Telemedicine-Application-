<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/dialog_rounded_corners"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/doctor"
        android:layout_width="150dp"
        android:layout_gravity="center"
        android:layout_height="150dp"
        android:contentDescription="@string/doctors"
        android:src="@drawable/delete_message_image" />

    <TextView
        android:id="@+id/delete_for_everyone"
        android:text="Delete for Everyone"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/delete_for_me"
        android:text="Delete for Me"
        android:textAlignment="center"
        android:padding="5dp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/cancel"
        android:text="Cancel"
        android:textAlignment="textEnd"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>