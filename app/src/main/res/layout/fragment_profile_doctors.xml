<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/inverted_corners"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".doctors.ProfileDoctorActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        app:civ_border_color="@color/black"
        app:civ_border_width="1dp"
        android:id="@+id/profile_doctor_photo"
        android:src="@drawable/ic_baseline_person_24"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <Button
        android:id="@+id/button_save_profile_image_doctor"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_doctor_photo"
        android:text="Save"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/btn_background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:focusable="true" />



</RelativeLayout>