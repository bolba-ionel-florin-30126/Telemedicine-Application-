<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".doctors.ListDoctorsFragment">

    <TextView
        android:id="@+id/chat_text_view_doctors"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:text="@string/chats"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_height="30dp"
        android:background="@color/backgroundAppColor1">
    </TextView>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/doctor_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_text_view_doctors"
        android:scrollbarSize="3dp"
        android:background="@drawable/inverted_corners"
        android:scrollbars="vertical"
        android:scrollbarThumbVertical="@android:color/darker_gray"
        tools:listitem="@layout/doctors_layout" />
</RelativeLayout>