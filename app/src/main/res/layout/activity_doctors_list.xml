<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".doctors.DoctorsListActivity">

    <FrameLayout
        android:id="@+id/container_doctors"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:id="@+id/bottom_navigation_chip_doctors"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"
        android:layout_gravity="bottom"
        app:cnb_unselectedColor="@color/white"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_bottom_navigation"
        app:cnb_menuResource="@menu/menu_navigation_doctors"/>

</RelativeLayout>